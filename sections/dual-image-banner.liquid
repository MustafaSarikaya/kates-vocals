{% schema %}
{
  "name": "Dual Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "First Column Image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Second Column Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Image banner"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Give customers details about the banner image(s) or content on the template.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "scheme-1",
          "label": "Scheme 1"
        }
      ],
      "default": "scheme-1",
      "label": "Color scheme"
    }
  ],
  "presets": [
    {
      "name": "Dual Image Banner"
    }
  ]
}
{% endschema %}

<style>
.dual-banner {
  display: grid;
  grid-template-columns: 1fr 1fr;
  width: 100vw;
  margin-left: calc(-50vw + 50%);
  margin-right: calc(-50vw + 50%);
}

.dual-banner__column {
  position: relative;
  min-height: 600px;
  display: flex;
  align-items: flex-end;
  justify-content: flex-start;
}

.dual-banner__background {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

.dual-banner__background img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.dual-banner__content {
  position: relative;
  z-index: 2;
  text-align: left;
  padding: 10% 10%;
}

.dual-banner__heading {
  font-size: 2.5rem;
  margin-bottom: 1rem;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
}

.dual-banner__text {
  margin-bottom: 2rem;
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
}

.dual-banner__button {
  display: inline-block;
  padding: 1rem 2rem;
  background-color: {{ settings.color_button_background }};
  text-decoration: none;
  border-radius: 4px;
  transition: background-color 0.3s;
  color: {{ settings.color_button_text }};
}

.dual-banner__button:hover {
  background-color: {{ settings.color_button_background_hover }};
}

@media screen and (max-width: 749px) {
  .dual-banner {
    grid-template-columns: 1fr;
  }
  
  .dual-banner__column {
    min-height: 400px;
  }

  .dual-banner__content {
    padding: 2% 2%;
  }
}
</style>

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="dual-banner">
    <div class="dual-banner__column">
      <div class="dual-banner__background">
        {%- if section.settings.image_1 != blank -%}
          {{ section.settings.image_1 | image_url: width: 1500 | image_tag:
             loading: 'lazy',
             sizes: '(min-width: 750px) 50vw, 100vw',
             widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000'
          }}
        {%- else -%}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
      <div class="dual-banner__content">
        {%- if section.settings.heading != blank -%}
          <h2 class="dual-banner__heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {{ section.settings.text }}
        {%- if section.settings.button_label != blank -%}
          <a href="{{ section.settings.button_link }}" class="dual-banner__button">
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
      </div>
    </div>
    <div class="dual-banner__column">
      <div class="dual-banner__background">
        {%- if section.settings.image_2 != blank -%}
          {{ section.settings.image_2 | image_url: width: 1500 | image_tag:
             loading: 'lazy',
             sizes: '(min-width: 750px) 50vw, 100vw',
             widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000'
          }}
        {%- else -%}
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
